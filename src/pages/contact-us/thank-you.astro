---
import "@styles/global.css";
import "@fontsource/poppins";
import MainLayout from "@layouts/MainLayout.astro";
---

<MainLayout locale="en" fillHeader>
  <div
    class="flex min-h-screen flex-col items-center justify-center p-6 text-center">
    <h1 class="mb-4 text-4xl font-bold">Thank You!</h1>
    <p class="mb-6 text-lg">
      We appreciate you reaching out to us. Our team will get back to you
      shortly.
    </p>
    <a href="/" class="text-blue-600 hover:underline">Return to Home</a>
  </div>
</MainLayout>
