---
import { t, type Locale } from "@/i18n";
import SolutionsSlider from "./ServicesSlider";

interface Props {
  locale: Locale;
}

const { locale }: Props = Astro.props;
---

<div class="flex flex-col gap-y-8 px-4 py-8 sm:px-6 md:px-10 lg:px-14">
  <div
    class="flex-col items-start justify-between py-8 sm:flex sm:py-10 lg:flex-row lg:items-baseline">
    <h2 class="h3 grow pb-8 whitespace-pre-line text-teal-400">
      {t(locale, "landing.solutions.title")}
    </h2>
    <h3 class="h5 text-shade-400 max-w-[400px] lg:max-w-[460px]">
      {t(locale, "landing.solutions.caption")}
    </h3>
  </div>
</div>
<SolutionsSlider client:load />
<div class="flex w-full items-center justify-center pt-20">
  <div
    class="caption bold flex shrink-0 grow-0 items-center justify-around rounded-full bg-neutral-100 px-4 py-3 text-teal-500 sm:px-6 sm:py-4">
    {t(locale, "landing.solutions.tag")}
  </div>
</div>
