---
import { buttonStyles } from "@styles/button";
import { cn } from "@styles/classNameMerge";
import { t, type Locale } from "@/i18n";

export interface Props {
  locale: Locale;
}

const { locale }: Props = Astro.props;
---

<div class="sm:12 px-8 py-10 md:px-0">
  <div
    class="flex flex-col gap-y-16 rounded-[24px] bg-teal-400 px-9 py-6 sm:py-8 md:px-12 md:py-12 lg:px-16 lg:py-16">
    <div>
      <button
        class={cn([
          buttonStyles({ variant: "brand" }),
          "flex-none bg-[rgba(255,255,255,.2)]",
        ])}>
        <p>{t(locale, "banners.great-solution.badge")}</p>
      </button>
    </div>
    <div class="flex flex-col items-end justify-between gap-30 md:flex-row">
      <h2 class="text-white-50 h3 max-w-[700px]">
        {t(locale, "banners.great-solution.title-1")}
        <span class="text-green-400">
          {t(locale, "banners.great-solution.title-2")}
        </span>
      </h2>

      <button class={cn([buttonStyles({ variant: "accent" }), "flex-none"])}
        >{t(locale, "banners.great-solution.cta")}</button
      >
    </div>
  </div>
</div>
